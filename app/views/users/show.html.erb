<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'books/list', {book: @book, user: @user} %><!--部分テンプレ-->


    <div class="col-md-8 offset-md-1"><!--1ｶﾗﾑ分中央寄せ-->
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td><!--bookの詳細ﾍﾟｰｼﾞへ-->
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div><!--booksの8カラム分終了-->
  </div><!--row終了-->
</div><!--container終了-->