<h2>User info</h2>
<%= image_tag @user.get_profile_image %>

<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>


<h2>Books</h2>

<% @books.each do |book| %>
<table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>ﾕｰｻﾞｰ画像</td>
          <td><%= link_to book.title, book_path(book.id) %></td><!--bookの詳細ﾍﾟｰｼﾞへ-->
