<h2>User info</h2>

<%= form_with model: @user do |f| %>
<form>
  <div class= "form-group">
    <label for= "book_name">Name</label>
    <%= f.text_field :name %>
  </div>

  <div class= "form-group">
    <label for= "book_name">Image</label>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>

   <div class= "form-group">
    <label for= "book_body">Introduction</label>
    <%= f.text_area :introduction %>
  </div>

  <div class = "form-group">
    <%= f.submit 'Update Book' %>
  </div>
</form>
<% end %>