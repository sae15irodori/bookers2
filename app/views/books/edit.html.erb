<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-m mx-auto">
      <h1>Editing Book</h1>

      <div id="error_explanation">
        <% if @book.errors.any? %><!--保存する時ﾃﾞｰﾀの存在なければ-->
          <h3>
            <%= @book.errors.count %>error prohibited this obj from being saved:
          </h3>
            <ul>
              <%= @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
      </div><!--ﾊﾞﾘﾃﾞｰｼｮﾝｴｰﾗ終了-->


      <%= form_with model: @book do |f| %><!--formタグ-->

        <div class= "form-group"><!--titleグループ-->
          <div class="field_with_errors"><!--titleラベル-->
            <label for= "book_title">Title</label>
          </div><!--titleラベル終了-->

          <div class="field_with_errors"><!--title入力フォーム-->
            <%= f.text_field :title, class:"form-control book_title" %>
          </div><!--title入力フォーム終了-->
        </div><!--titleグループ終了-->

        <div class="form-group"><!--opinionグループ-->
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class:"form-control book_body" %>
        </div><!--Opinionグループ終了-->

        <div class = "form-group"><!--ﾎﾞﾀﾝ-->
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>
      <% end %><!--formタグ-->


      <%= link_to "Show", book_path(@book.id), class:"book" %>
      |
      <%= link_to "Back", books_path, class:"back" %>

    </div><!--col終了-->
  </div><!--row終了-->
</div><!--container終了-->