
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag user.get_profile_image %><!--user→@user--><!--indexでは、ﾛｸﾞｲﾝ中ﾕｰｻﾞｰの情報/showでは、投稿者のﾕｰｻﾞｰ情報-->

          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= user.name %></th><!--user→@user-->
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= user.introduction %></th><!--user→@user-->
              </tr>
            </tbody>
          </table>

        <div class="row">
          <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %><!--user→@user-->
            <i class ="fas fa-user-cog"></i><!--ロゴが枠の中にはいる-->
          <% end %>
        </div><!--ﾘﾝｸrow終了-->

        <h2 class="mt-3">New book</h2><!--margin-top3-->

        <!--投稿ﾌｫｰﾑ-->
        <form>
          <%= form_with model: book do |f| %><!--book→@book-->
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title, class:"form-control book_title" %>
            </div>

            <div class="form-group">
              <label for="book_Opinion">Opinion</label>
              <%= f.text_area :body, class:"form-control book_body" %>
            </div>

            <div class="form-group">
              <%= f.submit 'Create Book', class:"btn btn-success" %>
            </div>
          <% end %>
        </form>

    </div><!--col終了-->
