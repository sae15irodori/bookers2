<h2>User info</h2>
<%= image_tag user.get_profile_image %><!--user→@user--><!--indexでは、ﾛｸﾞｲﾝ中ﾕｰｻﾞｰの情報/showでは、投稿者のﾕｰｻﾞｰ情報-->

<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th><!--user→@user-->
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th><!--user→@user-->
    </tr>
  </tbody>
</table>


<%= link_to "edit", edit_user_path(user.id) %><!--user→@user-->


<h2>New book</h2>
  <!--投稿ﾌｫｰﾑ-->
  <%= form_with model: book do |f| %><!--book→@book-->
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>
