<h2>User info</h2>

<h2>New book</h2>
  <!--ﾊﾞﾘﾃﾞｰｼｮﾝｴﾗｰ-->
  <% if @book.errors.any? %><!--保存する時ﾃﾞｰﾀの存在なければ-->
    <%= @book.errors.count %>error Please fill in the blanks
    <ul>
      <%= @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <!--投稿ﾌｫｰﾑ-->
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
