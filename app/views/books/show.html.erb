<div class="container">
  <div class="row">
    <%= render 'list', {book: @book_n, user: @user} %><!--部分テンプレ-->

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %><!--画像ﾘﾝｸuser,showページへ-->
                  <%= image_tag @book.user.get_profile_image %>
                <% end %>
                <br>
                <%= link_to @book.user.name, user_path(@book.user.id) %><!--名前取得user,showﾍﾟｰｼﾞへ-->
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td><!--タイトル取得book,showﾍﾟｰｼﾞへ-->
              <td><%= @book.body %></td>
              <td>
                <% if @book.user == current_user %><!--ログイン中ユーザーならeditとdestroyﾘﾝｸ-->
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
    </div><!--col終了-->
  </div><!--row終了-->
</div><!--container終了-->